<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= form_for [@subforum, @topic]  do |f| %>

			<%= f.label :title %>
			<%= f.text_field :title, class: "form-control" %>
		  
			<%= f.label :content %>
			<%= f.text_field :content, class: "form-control" %>
		 
		 	<% if current_page?(controller: 'topics', action: 'new') %>
				<%= f.submit  "Create Subforum", class: "btn btn-primary", data: {disable_with: "Creating..."} %> 
			<% else current_page?(controller: 'topics', action: 'edit') %>
				<%= f.submit  "Edit Subforum", class: "btn btn-primary", data: {disable_with: "Updating..."} %>
			<% end %>
		  
		<% end %>
	</div>
</div>
