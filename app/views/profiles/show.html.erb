<div class = "pages group">

		<div class = "pages-section group">
			
			<div class = "section-title group">
				<h1 class = "section-title-words group" ><%= current_user.username %>'s Profile</h1>
			</div>
			
			<div class = "profile-section">
				<div class = "profile-left"><%= image_tag(current_user.avatar, class: "profile-avatar") %></div>
				<div class = "profile-right">
					<p>Joined: <%= current_user.created_at.strftime("%d %b %Y") %></p>
					<p>Topics: <%= current_user.topics.size %></p>
					<p>Posts: <%= current_user.replies.size %></p>
				</div>

			</div>
			
			
		</div>

	</div>

</div>
